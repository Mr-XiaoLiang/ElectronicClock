<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@android:color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/titleView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/colorWheelView"
            android:textSize="18sp"
            android:text="@string/app_name"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/summaryView"
            app:layout_constraintLeft_toLeftOf="@id/titleView"
            app:layout_constraintTop_toBottomOf="@id/titleView"
            app:layout_constraintRight_toRightOf="@id/titleView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="14sp"
            android:text="@string/app_name"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="12dp"
            android:alpha="0.8"
            android:textColor="@android:color/white"
            android:layout_width="0px"
            android:layout_height="wrap_content"/>

    <liang.lollipop.electronicclock.view.ColorWheelView
            android:id="@+id/colorWheelView"
            android:padding="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>