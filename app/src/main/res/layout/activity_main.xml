<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bodyGroup"
        android:layout_width="match_parent" android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/preferenceGroup"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0px"
            android:layout_height="0px"/>

    <liang.lollipop.electronicclock.view.NumberView
            android:id="@+id/numberView1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFF"/>
    <liang.lollipop.electronicclock.view.NumberView
            android:id="@+id/numberView2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/numberView1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFF"/>
    <liang.lollipop.electronicclock.view.NumberView
            android:id="@+id/numberView3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/numberView2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFF"/>
    <liang.lollipop.electronicclock.view.NumberView
            android:id="@+id/numberView4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/numberView3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFF"/>
    <liang.lollipop.electronicclock.view.NumberView
            android:id="@+id/numberView5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/numberView4"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#FFF"/>

</androidx.constraintlayout.widget.ConstraintLayout>
