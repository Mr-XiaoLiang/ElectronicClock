<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rootGroup"
        android:background="@android:color/black"
        tools:context=".activity.EditActivity">

    <liang.lollipop.widget.widget.WidgetGroup
            android:id="@+id/widgetGroup"
            android:layout_width="0px"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/rightList"
            app:layout_constraintBottom_toTopOf="@id/bottomList"
            app:layout_constraintHorizontal_weight="8"
            app:layout_constraintVertical_weight="8"
            android:background="@color/colorBackground"
            android:layout_height="0px"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rightList"
            app:layout_constraintTop_toTopOf="@id/widgetGroup"
            app:layout_constraintBottom_toBottomOf="@id/widgetGroup"
            app:layout_constraintLeft_toRightOf="@id/widgetGroup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_weight="2"
            android:layout_width="0px"
            android:background="@color/colorBackground"
            android:layout_height="0px"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/bottomList"
            app:layout_constraintTop_toBottomOf="@id/widgetGroup"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/widgetGroup"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_weight="2"
            android:layout_width="0px"
            android:background="@color/colorBackground"
            android:layout_height="0px"/>

</androidx.constraintlayout.widget.ConstraintLayout>